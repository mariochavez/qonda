<div class="forgot">
	<h3><%= I18n.t('tog_user.user.forgot_password') %></h3>
	<p><%= I18n.t('tog_user.user.forgot_password_help') %></p>
</div><!--end forgot-->

<div id="area_signup">
   <%= error_messages_for :user %>
   <% form_for :user, :url => forgot_path, :html => {:id => "f_signup", :name => "f_signup" } do |f| -%>
    <fieldset>
     <p>
       <%= f.label :email,I18n.t('tog_user.model.your_email') %>
       <%= f.text_field :email, :class => "fieldbox", :size => "74" %>
	   <%= submit_tag I18n.t('tog_user.send'), :class => "button mainaction" %>
     </p>
    </fieldset>
  
   <% end -%>
</div>