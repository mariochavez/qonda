<div>

	<div>
	    <div>
	        <%= I18n.t("tog_core.views.home.index.featured_users") %>
            <ul>
              <% last_users.each do |user|%>
                <li><%=link_to icon_for_profile(user.profile, 'small'), profile_path(user.profile)%></li>
              <%end %>
            </ul>

			<%= I18n.t("tog_core.views.home.index.groups") %>
			<ul>
                <% last_groups.each do |group| %>
                    <li>
                        <div><%= link_to image_for_group(group, 'medium'), group_path(group) %></div>
                        <div><%= link_to group.name, group_path(group) %></div>
                        <div>
                            <%=group.description%>
                        </div>
                    </li>
                <%end %>
            </ul>
	    </div>
	</div>

</div>

<br />

<div>
  <%= I18n.t("tog_core.views.home.index.the_public_continuum") %>...
    <ul>
      <%= public_continuum(20) %>
    </ul>
</div>
