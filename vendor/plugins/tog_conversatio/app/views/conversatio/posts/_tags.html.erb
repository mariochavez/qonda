<span class="fontsmaller">
    <%= I18n.t('tog_conversatio.views.posts.tags.title') %>:
    <%- if !post.tags.blank? -%>
      <%- for tag in post.tags -%>
       <%= link_to tag, tag_conversatio_blog_posts_path(post.blog, tag.name) %>,
      <%- end -%>
    <%- else -%>
       <%= I18n.t('tog_conversatio.views.posts.tags.not_found') %>
    <%- end -%> 
</span>
