<%
#locals
blog ||= @blog
%>
<div class="titleB"><%= I18n.t('tog_conversatio.views.member.blogs.new.create_blog') %></div>

<%= error_messages_for :blog %>
<% form_for :blog, :url => member_conversatio_blogs_path, :html => {:id => "settings", :method => "post"} do |f| -%>
  <fieldset>
    <div class="fields">
      <p><label for="blog_title"><%= I18n.t('tog_conversatio.views.member.blogs.new.title') %></label><%= f.text_field :title, :class=>"fieldbox wide" %></p>

      <p><label for="blog_description"><%= I18n.t('tog_conversatio.views.member.blogs.new.description') %></label><%= f.text_area :description, :class=>"fieldbox wide" %></p>
    </div>
  </fieldset>
  <div class="actions"><%= submit_tag I18n.t('tog_conversatio.views.member.blogs.new.create_blog'), :class => 'button mainaction' %></div>
<% end -%>


<% content_for :sidebar do %>

  <%= render :partial => 'member/conversatio/blogs/blogs' %>
  
<% end %>
