<div class="main_wrap">
  <div class="module_title">Crear Noticia</div>
  <div class="main_content">
    <% unless logged_in? && current_user.active? %>
    
      TODO: mensaje de usuario no activo
   
    <% else %>
      <%= error_messages_for :story %>
      <% form_for :story, :url => {:action => :create},  :html => {:id => "settings"} do |f| -%>
        <p>
          <label for="title"><strong>Título de la Noticia</strong></label>
           <%= f.text_field :title, {:size => 40, :class => "fieldbox wide"} %>
          </label>  
        </p>
        <p>
         <label for="tags"><strong>Tags (separa por comas):</strong><br />
            <%= f.text_field :tag_list, {:size => nil} -%>
         </label>
        </p>
        <p>
           <label for="tags"><strong><%= I18n.t("tog_headlines.model.source") %></strong><br />
             <%=f.text_field :source, :class => "fieldbox" %>
           </label>      
        </p>
        <p>
           <label for="tags"><strong><%= I18n.t("tog_headlines.model.lang") %></strong><br />
             <%=f.select :lang, {"Español"=>"es"}, :class => "fieldbox"%>
           </label>      
        </p>
        <p>
         <label for="tags"><strong><%= I18n.t("tog_headlines.model.publish_date") %></strong><br />
          <%=f.date_select :publish_date, :class=>"fieldbox" %>
         </label>                     
        </p>    
        <p>
          <label for="archive_date"><%= I18n.t("tog_headlines.model.archive_date") %></strong><br />
          <%=f.date_select :archive_date, :class=>"fieldbox" %>
          </label>                   
        </p>         
        <p>
         <label for="text"><strong>Resumen de la noticia:</strong><br />
            <%= f.text_area :summary, {:cols => 40, :rows => 7, :class => "fieldbox wide"} %>
         </label>
        </p>
        <p>
          <label for="text"><strong>Contenido de la noticia:</strong><br />
            <%= f.text_area :body, {:cols => 40, :rows => 7, :class => "fieldbox wide"} %>
          </label>  
        </p>
        <div class="form_actions center">
          <br />
          <%= submit_tag 'Publicar', {:class=>"button1", :style => "font-size: 1em;"} %>
        </div>  
      <% end -%>
    <% end -%>    

     <!--/form-->


   </div> <!-- ./main_content -->
</div> <!-- /.main_wrap -->

